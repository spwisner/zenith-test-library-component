{
  "name": "@spwisner/zenith-test-library-component",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spwisner/zenith-test-library-component.git"
  },
  "author": "“Steve <“steve@stevewisner.com”> (www.stevewisner.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spwisner/zenith-test-library-component/issues"
  },
  "homepage": "https://github.com/spwisner/zenith-test-library-component#readme",
  "scripts": {
    "start": "NODE_ENV=development start-storybook -p 9001 -c .storybook",
    "test": "jest --coverage --verbose",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- babel src -d dist --ignore spec.js,story.js",
    "build-storybook": "build-storybook",
    "publish": "lerna publish --skip-git --skip-npm",
    "prepublish": "npm run build",
    "precommit": "npm test",
    "postinstall": "npm run bootstrap"
  },
  "devDependencies": {
    "@storybook/react": "^3.0.0-alpha.4",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^2.8.2",
    "glob-loader": "^0.3.0",
    "jest": "^20.0.0",
    "lerna": "^2.0.0-rc.4",
    "react": "^15.5.4",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "styled-components": "^2.1.0"
  },
  "jest": {
    "resetMocks": true,
    "resetModules": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/dist/**",
      "!**/node_modules/**",
      "!**/*.story.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>node_modules/",
      "<rootDir>coverage/"
    ],
    "testMatch": [
      "**/?(*.)(spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
